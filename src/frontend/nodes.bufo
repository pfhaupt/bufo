struct ParsedUnionVariant {
    ignored: bool;
    parent: TLIParent;
    span: Span;
    name: Token;
    data: ParsedUnionVariantData;
}
union ParsedUnionVariantData {
    Empty,
    Tuple { fields: ParsedTypeNodeList },
    Struct { fields: ParsedTypeNodeList, names: TokenList },
}
func getID(this: &ParsedUnionVariant) -> usize {
    return indexOf(&unionVariants, this);
}

func get_fields(this: &ParsedUnionVariant) -> (bool, &ParsedTypeNodeList) {
    match (&this.data) {
        &ParsedUnionVariantData::Tuple { fields } => { return (true, &fields); }
        &ParsedUnionVariantData::Struct { fields, names } => { return (true, &fields); }
        _ => { }
    }
    return (false, null);
}

func toType(this: &ParsedUnionVariant) -> &Type {
    let decl: &ParsedStructDecl = newParsedStructDecl(this.parent, this.span, this.name);
    match (this.data) {
        ParsedUnionVariantData::Empty => { }
        ParsedUnionVariantData::Tuple { fields } => {
            for (let i: usize = 0; i < fields.length; i = i + 1) {
                let s: String = blank;
                pushNumber(&s, i);
                let name = newToken(this.parent.id as usize, &asSubStr(&s), 0, TOKEN_IDENT);
                addField(&decl.context, name, fields.elements[i]);
            }
        }
        ParsedUnionVariantData::Struct { fields, names } => {
            assert(fields.length == names.length, "ParsedUnionVariant.toType: struct count mismatch");
            for (let i: usize = 0; i < fields.length; i = i + 1) {
                addField(&decl.context, names.elements[i], fields.elements[i]);
            }
        }
        _ => { unreachable(); }
    }
    let typ = wrap(Type::Struct(decl));
    decl.typeState = TCState::Type(typ);
    return typ;
}

func getFieldIndex(this: &ParsedUnionVariant, name: &SubStr) -> usize {
    if let &ParsedUnionVariantData::Struct { _, names } = &this.data {
        for (let i: usize = 0; i < names.length; i = i + 1) {
            if (equals(&names.elements[i].content, name)) return i;
        }
    }
    unreachable("ParsedUnionVariant.getFieldIndex: Expected to find field with name");
}
func getFieldOffsetAndSize(this: &ParsedUnionVariant, index: usize, offset: &usize, size: &usize, inBits: bool) {
    let fields: ParsedTypeNodeList = blank;
    match (this.data) {
        ParsedUnionVariantData::Empty => {
            unreachable("ParsedUnionVariant.getFieldOffsetAndSize called on empty union variant");
        }
        ParsedUnionVariantData::Struct { _fields, _ } => { fields = _fields; }
        ParsedUnionVariantData::Tuple { _fields } => { fields = _fields; }
        _ => { unreachable(); }
    }
    assert(index < fields.length, "getFieldOffsetAndSize: Out-of-bounds");
    assert(fields.length > 0, "getFieldOffsetAndSize: Empty variant");
    let sizeFn: func (&Type) -> usize = getSizeInBytes;
    let alignFn: func (&Type) -> usize = getAlignmentInBytes;
    if (inBits) {
        sizeFn = getSizeInBits;
        alignFn = getAlignmentInBits;
    }
    let o: usize = 0;
    if (*offset != 0) {
        let nf: &Type = getType(&fields.elements[0].typeState);
        o = nextMultipleOf(*offset, alignFn(nf));
    }
    for (let i: usize = 0; i < fields.length; i = i + 1) {
        let f = getType(&fields.elements[i].typeState);
        let s: usize = sizeFn(f);
        if (i == index) {
            *offset = o;
            *size = s;
            return;
        }
        o = o + s;
        if (i != fields.length - 1) {
            let nf: &Type = getType(&fields.elements[i + 1].typeState);
            o = nextMultipleOf(o, alignFn(nf));
        }
    }
    unreachable("Expected to find field offset and size");
}

func addField(this: &ParsedUnionVariant, field: &ParsedTypeNode) {
    let &ParsedUnionVariantData::Tuple { fields } = &this.data else {
        unreachable("ParsedUnionVariant.addField called on non-tuple");
    };
    push(&fields, field);
}

func getTypeAtIndex(this: &ParsedUnionVariant, index: usize) -> &Type {
    let node: &ParsedTypeNode = null;
    match (&this.data) {
        &ParsedUnionVariantData::Tuple { fields } => {
            assert(index < fields.length, "Out of bounds access in ParsedUnionVariant.getTypeAtIndex");
            node = fields.elements[index];
        }
        &ParsedUnionVariantData::Struct { fields, _ } => {
            assert(index < fields.length, "Out of bounds access in ParsedUnionVariant.getTypeAtIndex");
            node = fields.elements[index];
        }
        _ => { unreachable("ParsedUnionVariant.getTypeAtIndex"); }
    }
    assert(isSuccess(&node.typeState), "Expected valid TypeNode state in ParsedUnionVariant.getTypeAtIndex");
    return getType(&node.typeState);
}

func addNamedField(this: &ParsedUnionVariant, name: Token, typ: &ParsedTypeNode) {
    let &ParsedUnionVariantData::Struct { fields, names } = &this.data else {
        unreachable("ParsedUnionVariant.addNamedField called on non-struct");
    };
    assert(fields.length == names.length, "ParsedUnionVariant.addNamedField: Unbalanced field and name lists");
    push(&fields, typ);
    push(&names, name);
}

func checkForDuplicateName(this: &ParsedUnionVariant, name: &Token, dupl: &&Token) -> bool {
    let &ParsedUnionVariantData::Struct { _, names } = &this.data else {
        unreachable("ParsedUnionVariant.checkForDuplicateName called on non-struct");
    };
    let found = false;
    for (let i: usize = 0; i < names.length; i = i + 1) {
        let n = &names.elements[i];
        if (equals(&n.content, &name.content)) {
            if (found) {
                *dupl = n;
                return true;
            }
            found = true;
        }
    }
    return false;
}

