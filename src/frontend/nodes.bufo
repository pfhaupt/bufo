func getLineAndColumnFromSpan(this: &ParsedFile, span: &Span, line: &usize, column: &usize) {
    let l: usize = 1;
    let c: usize = 1;
    let p: usize = 0;
    while (p < span.start) {
        let _c = this.src.start[p];
        if (_c == '\n') {
            c = 1;
            l = l + 1;
        } else {
            c = c + 1;
        }
        p = p + 1;
    }
    *line = l;
    *column = c;
}

