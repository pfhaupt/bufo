import "prelude.bufo";

struct Foo {
    value: i32;
    var: i32;
    func getVar(this) -> i32 {
        return this.var;
    }

    func setVar(mut this, var: i32) {
        // Will not work, because `setVar` copies the instance
        this.var = var;
    }
}

func main(argc: i32, argv: &&char) -> i32 {
    mut f: Foo = Foo {
        value: 420,
        var: 69
    };
    let var: i32 = f.getVar();
    assert(var == 69);
    f.setVar(12);
    assert(var == f.getVar());
    assert(f.getVar() == 69);
    return 0;
}
